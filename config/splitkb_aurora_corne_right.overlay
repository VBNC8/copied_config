/ {
    trackpoint: trackpoint {
        compatible = "zmk,input-mouse-ps2";
        /* Erst mal den Swap probieren: */
        data-gpios = <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        clock-gpios = <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
    };

    trackpoint_listener {
        compatible = "zmk,input-listener";
        device = <&trackpoint>;
    };
};

/* Wir versuchen die Empfindlichkeit Ã¼ber den Treiber-Parameter zu erzwingen */
&trackpoint {
    sampling-rate-number = <100>;
};
