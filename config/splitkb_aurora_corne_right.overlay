/ {
    /* Wir erzwingen P0.13 auf High, ohne den 'Regulator' Umweg */
    p0_13_en: gpio_hog {
        compatible = "zmk,gpio-hog";
        gpios = <13 GPIO_ACTIVE_HIGH>;
        output-high;
    };

    trackpoint: trackpoint {
        compatible = "zmk,input-mouse-ps2";
        data-gpios = <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        clock-gpios = <&gpio0 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
    };

    trackpoint_listener {
        compatible = "zmk,input-listener";
        device = <&trackpoint>;
    };
};

/* Wir m√ºssen dem GPIO-Controller sagen, dass er den Hog-Knoten verarbeiten soll */
&gpio0 {
    status = "okay";
    p0_13_en {
        status = "okay";
    };
};
